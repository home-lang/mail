# SMTP Server Environment Configuration
# Generated by Ansible - DO NOT EDIT MANUALLY

# Network
SMTP_HOST=0.0.0.0
SMTP_PORT={{ smtp_port }}
SMTP_HOSTNAME={{ smtp_hostname }}

# Limits
SMTP_MAX_CONNECTIONS={{ smtp_max_connections }}
SMTP_MAX_MESSAGE_SIZE={{ smtp_max_message_size }}
SMTP_MAX_RECIPIENTS={{ smtp_max_recipients }}

# Features
SMTP_ENABLE_TLS={{ smtp_enable_tls | lower }}
SMTP_ENABLE_AUTH={{ smtp_enable_auth | lower }}
SMTP_ENABLE_DNSBL={{ smtp_enable_dnsbl | lower }}
SMTP_ENABLE_GREYLIST={{ smtp_enable_greylist | lower }}

# TLS
{% if smtp_enable_tls %}
SMTP_TLS_CERT={{ tls_cert_path }}
SMTP_TLS_KEY={{ tls_key_path }}
{% endif %}

# Database
SMTP_DB_PATH={{ db_path }}

# Directories
SMTP_QUEUE_DIR={{ queue_dir }}
SMTP_MAIL_DIR={{ mail_dir }}

# Monitoring
HEALTH_PORT={{ health_port }}
METRICS_PORT={{ metrics_port }}

# Logging
LOG_LEVEL={{ log_level }}
LOG_DIR={{ log_dir }}

# StatsD (if enabled)
{% if enable_statsd %}
STATSD_HOST={{ statsd_host }}
STATSD_PORT={{ statsd_port }}
{% endif %}
