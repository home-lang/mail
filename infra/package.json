{
  "name": "smtp-server-infra",
  "type": "module",
  "version": "1.0.0",
  "description": "AWS Infrastructure for SMTP Server using ts-cloud",
  "author": "Chris Breuer",
  "license": "MIT",
  "scripts": {
    "build": "bun --bun build.ts",
    "test": "bun test",
    "cloud": "bun run ./node_modules/ts-cloud/bin/cli.ts",
    "generate": "bun run cloud generate",
    "generate:dev": "bun run cloud generate --env dev",
    "generate:staging": "bun run cloud generate --env staging",
    "generate:prod": "bun run cloud generate --env production",
    "diff": "bun run cloud diff",
    "diff:dev": "bun run cloud diff --env dev",
    "diff:staging": "bun run cloud diff --env staging",
    "diff:prod": "bun run cloud diff --env production",
    "deploy": "bun run cloud deploy",
    "deploy:dev": "bun run cloud deploy --env dev",
    "deploy:staging": "bun run cloud deploy --env staging",
    "deploy:prod": "bun run cloud deploy --env production",
    "destroy": "bun run cloud stack:delete smtp-server-production",
    "destroy:dev": "bun run cloud stack:delete smtp-server-dev",
    "destroy:staging": "bun run cloud stack:delete smtp-server-staging",
    "destroy:prod": "bun run cloud stack:delete smtp-server-production",
    "status": "bun run cloud deploy:status",
    "status:dev": "bun run cloud deploy:status --env dev",
    "status:staging": "bun run cloud deploy:status --env staging",
    "status:prod": "bun run cloud deploy:status --env production",
    "stacks": "bun run cloud stack:list",
    "doctor": "bun run cloud doctor",
    "lint": "pickier lint .",
    "lint:fix": "pickier lint . --fix",
    "format": "pickier format .",
    "format:check": "pickier format . --check",
    "typecheck": "bun --bun tsc --noEmit"
  },
  "keywords": [
    "ts-cloud",
    "aws",
    "smtp",
    "mail-server",
    "infrastructure",
    "cloudformation"
  ],
  "dependencies": {
    "ts-cloud": "link:ts-cloud"
  },
  "devDependencies": {
    "@types/bun": "^1.3.0",
    "pickier": "^0.1.7",
    "typescript": "^5.9.3"
  }
}
